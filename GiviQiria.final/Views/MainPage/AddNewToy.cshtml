@using System.ComponentModel.DataAnnotations
@using GiviQiria.final.Models

@model GiviQiria.final.Models.DTO.AddNewCatRequest

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add New Cat</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    @{
        var catID = ViewData["CatID"];

    }
    <h1>@catID</h1>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Add New Toy</h1>

        <form action="/MainPage/AddNewToy" method="post">
            <input style="display :none" name="CatId" value="@catID" />
            <div class="mb-3">
                <label for="ToyName" class="form-label">ToyName:</label>
                <input type="text" class="form-control" id="ToyName" name="ToyName">
            </div>
            <div class="mb-3">
                <label for="Weight" class="form-label">Weight:</label>
                <input type="number" class="form-control" id="Weight" name="Weight">
            </div>
            <div class="mb-3">
                <label for="Color" class="form-label">Color:</label>
                <input type="color" class="form-control" id="Color" name="Color">
            </div>
            <button type="submit" class="btn btn-primary">Add Toy</button>
            <a type="button" class="btn btn-white" style="border: 1px solid black;" href="/MainPage/Index" id="addNewCat">Go To Main Page</a>
        </form>

        @if (ViewBag.Message != null)
        {
            <div class="mt-3">
                <h2>Added Cat:</h2>
                <p>@ViewBag.Message</p>
            </div>
        }
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
